@page
@model QuizProject.Areas.Admin.Pages.Answers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Answer.Id" />
            <div class="mb-3">
                <label asp-for="Answer.Text" class="control-label"></label>
                <input asp-for="Answer.Text" class="form-control" />
                <span asp-validation-for="Answer.Text" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Answer.IdQuestion" class="control-label"></label>
                <select asp-for="Answer.IdQuestion" class="form-control" asp-items="ViewBag.IdQuestion"></select>
                <span asp-validation-for="Answer.IdQuestion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

