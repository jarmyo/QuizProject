@page
@model QuizProject.Areas.Admin.Pages.Answers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Answer.Id" class="control-label"></label>
                <input asp-for="Answer.Id" class="form-control" />
                <span asp-validation-for="Answer.Id" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Answer.Text" class="control-label"></label>
                <input asp-for="Answer.Text" class="form-control" />
                <span asp-validation-for="Answer.Text" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Answer.IdQuestion" class="control-label"></label>
                <select asp-for="Answer.IdQuestion" class ="form-control" asp-items="ViewBag.IdQuestion"></select>
            </div>
            <div class="mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

