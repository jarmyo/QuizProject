@page
@model QuizProject.Areas.Admin.Pages.Categories.DeleteModel
@{
    ViewData["Title"] = "Delete " + Model.Category.Title ;
}
<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt><dd class="col-sm-10">@Model.Category.Title</dd>
        <dt class="col-sm-2">Description</dt><dd class="col-sm-10">@Model.Category.Description</dd>
        <dt class="col-sm-2">Order</dt><dd class="col-sm-10">@Model.Category.Order</dd>
        <dt class="col-sm-2">IsAviable</dt><dd class="col-sm-10">@Model.Category.IsAviable</dd>
        <dt class="col-sm-2">AviabilityDate</dt><dd class="col-sm-10">@Model.Category.AviabilityDate</dd>
    </dl>    
    <form method="post">
        <input type="hidden" asp-for="Category.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>